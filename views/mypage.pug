include msg
doctype html
html(lang='ko')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(http-equiv='X-UA-Compatible', content='ie=edge')
		link(rel='shortcut icon', href='./img/favicon.ico', type='image/x-icon')
		link(rel='icon', href='./img/favicon.ico', type='image/x-icon')
		link(rel='stylesheet', href='./css/font-awesome/css/font-awesome.min.css')
		link(rel='stylesheet', href='./css/font/stylesheet.css')
		link(rel='stylesheet', href='./css/mypage.css')
		link(rel='stylesheet', href='./css/bulma.css')
		link(rel='stylesheet', href='./css/flexboxgrid.min.css')
		title My Page
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
		script(type='text/javascript').
			document.addEventListener('DOMContentLoaded', function () {
			var $navbarBurgers = Array.prototype.slice.call(document.querySelectorAll('.navbar-burger'), 0);
			if ($navbarBurgers.length > 0) {
			$navbarBurgers.forEach(function ($el) {
			$el.addEventListener('click', function () {
			var target = $el.dataset.target;
			var $target = document.getElementById(target);
			$el.classList.toggle('is-active');
			$target.classList.toggle('is-active');
			});
			});
			}
			});
	body
		nav.navbar.is-transparent
			.navbar-brand
				a.navbar-item(href='/')
					img(src='./img/QuizTree@2.png', alt='QuizTree')
					h1(style='margin-left:10px;font-size:24px') QuizTree
				.navbar-burger.burger(data-target='navMenu')
					span
					span
					span
			#navMenu.navbar-menu
				.navbar-start
					input#searchbar.input(type='text', placeholder='Search')
				.navbar-end
					.navbar-item
						.field.is-grouped
							p.control
								a.bd-tw-button.button(target='_blank', href='/mypage')
									span.icon
										i.fa.fa-user-o(aria-hidden='true')
									span
										| #{username}
							a(href='/logout')
								p.control
										button.bd-tw-button.button
											span.icon
												i.fa.fa-sign-out(aria-hidden='true')
											span
												| Logout
		.container
			.wrapper
				.user
					h1#username.title.is-4 @ #{username}
					.userinfo
						.row.between-xs
							.col-xs-4
								._box
									span 게시물
							.col-xs-4
								._box
									span 팔로워
							.col-xs-4
								._box
									span 팔로잉
				.posts
					- for(quiz in list){
						.card
							header.card-header
								p.card-header-title
									// 퀴즈 이름
									| #{quiz.name}
							.card-content
								.content
									// 퀴즈 설명
									span.substance #{quiz.explan}
									br
									// 카테고리
									- for(tag in quiz.tags){
										a.tag.is-light(href=`/tags/${tags[tag]}`) #{tags[tag]}
									- }
									br
									// 올린시간
									time #{quiz.k_time}
									// 만든 사람
									span.author
										a #{quiz.auther}
								footer.card-footer
									a.card-footer-item(href=`/play/${quiz.id}`) Play
									a.card-footer-item(href='#' onclick=`like('${quiz.id}')`)
										i.fa.fa-thumbs-o-up(aria-hidden='true')
										| Like
					- }
		+msg_alert(usermsg)
