include msg
include top
doctype html
html(lang='ko')
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(http-equiv='X-UA-Compatible', content='ie=edge')
		link(rel='shortcut icon', href='./img/favicon.ico', type='image/x-icon')
		link(rel='icon', href='./img/favicon.ico', type='image/x-icon')
		link(rel='stylesheet', href='./css/font-awesome/css/font-awesome.min.css')
		link(rel='stylesheet', href='./css/font/stylesheet.css')
		link(rel='stylesheet', href='./css/mypage.css')
		link(rel='stylesheet', href='./css/bulma.css')
		link(rel='stylesheet', href='./css/flexboxgrid.min.css')
		title My Page
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
		+dom()
	body
		script.
			const webSocket = new WebSocket('wss://quiztree.xyz:5782');
			webSocket.onopen = event => {};
			function likeBtn(id) {
			webSocket.send(JSON.stringify({
			id:id,
			token:`${token}`
			}));
			}
		nav.navbar.is-transparent
			.navbar-brand
				a.navbar-item(href='/')
					img(src='./img/QuizTree@2.png', alt='QuizTree')
					h1(style='margin-left:10px;font-size:24px') QuizTree
				.navbar-burger.burger(data-target='navMenu')
					span
					span
					span
			#navMenu.navbar-menu
				.navbar-start
					input#searchbar.input(type='text', placeholder='Search',name='word')
				.navbar-end
					.navbar-item
						.field.is-grouped
							p.control
								a.bd-tw-button.button(target='_blank', href='/mypage')
									span.icon
										i.fa.fa-user-o(aria-hidden='true')
									span
										| #{username}
							a(href='/logout')
								p.control
										button.bd-tw-button.button
											span.icon
												i.fa.fa-sign-out(aria-hidden='true')
											span
												| Logout
		.container
			.wrapper
				.user
					h1#username.title.is-4 @ #{username}
					.userinfo
						.row.between-xs
							.col-xs-4
								._box
									span 게시물
							.col-xs-4
								._box
									span 팔로워
							.col-xs-4
								._box
									span 팔로잉
				.posts
					- for(quiz in list){
						+card(quiz.name, quiz.explan, quiz.tags, quiz.time, quiz.auther, quiz.id)
					- }
		+msg_alert(usermsg)
